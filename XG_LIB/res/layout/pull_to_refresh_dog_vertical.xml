<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginLeft="55dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pull_to_refresh_image"
            android:layout_width="@dimen/xg_pull_img_width"
            android:layout_height="@dimen/xg_pull_img_height"
            android:src="@drawable/xg_ptr_loading_pull"
            android:layout_gravity="center" />

        <ImageView
            android:layout_marginBottom="@dimen/xg_pull_img_footer_margin_start"
            android:id="@+id/pull_to_refresh_footer"
            android:layout_width="@dimen/xg_pull_footer_img_width"
            android:layout_height="@dimen/xg_pull_footer_img_width"
            android:src="@drawable/xg_ptr_loading_earch"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout

        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pull_to_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="@string/ptr_header_text"/>

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/pull_to_refresh_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textSize="10sp"
            android:textColor="#999999"
            android:gravity="left"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>

</merge>

