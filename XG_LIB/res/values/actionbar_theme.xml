<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="xg_actionbar_bottom_line">#aaaaaa</color>
    <color name="xg_actionbar_bg_color">@android:color/white</color>
    <color name="xg_actionbar_item_bg">#cccccc</color>
    <color name="xg_actionbar_item_textColor">#333333</color>
    <color name="xg_actionbar_title_txt_color">#333333</color>
    <dimen name="actionbar_height">50dp</dimen>
    <dimen name="actionbar_item_height">30dp</dimen>
    <dimen name="actionbar_content_padding">15dp</dimen>

    <style name="ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:background">@drawable/xg_actionbar_bg</item>
    </style>

    <style name="ActionBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_item_height</item>
        <item name="android:textColor">@color/xg_actionbar_item_textColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:onClick">onActionbarClick</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/xg_actionbar_item_bg_selector</item>
    </style>

    <style name="ActionBarHomeLogo">
        <item name="android:layout_marginRight">0px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>

    <style name="ActionBarProgressBar" parent="@android:style/Widget.ProgressBar.Small"></style>

</resources>